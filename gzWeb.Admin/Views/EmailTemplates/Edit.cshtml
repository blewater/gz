                                            <textarea class="form-control" rows="20" data-editor="html" name="Body" id="Body">@Model.Body</textarea>
                                            @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    
