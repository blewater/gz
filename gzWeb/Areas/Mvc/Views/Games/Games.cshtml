@{
    Layout = "~/Areas/Mvc/Views/Shared/_GamesLayout.cshtml";
}
<div class="games-list">
    <div class="full-width">
        <gz-carousel gz-slides="carouselGames" gz-no-progress></gz-carousel> 
    </div>
    <div class="search-panel">
        <div class="container-fluid">
            <div class="search-categories col-xs-12 col-sm-6 col-lg-9">
                <span ng-repeat="category in gameCategories">
                    <a class="" ng-click="onCategorySelected(category)">
                        {{getCategoryTitle(category.name)}}
                    </a>
                </span>
            </div>
            <div class="search-game col-xs-12 col-sm-6 col-lg-3">
                <input type="search" placeholder="SEARCH GAME" class="form-control" ng-model="searchInput" ng-focus="searchFocused = true" ng-blur="searchFocused = false">
                <span class="form-control-feedback" aria-hidden="true" ng-class="{'focused':searchFocused || searchInput}">
                    <i class="fa fa-search"></i>
                </span>
            </div>
        </div>
    </div>

    <div class="game-categories">
        <div class="container-fluid">
            <div class="category" ng-repeat="category in gameCategories">
                <div class="row">
                    <div class="title col-xs-12" ng-class="{'text-center': xs}">
                        <span>{{getCategoryTitle(category.name)}}</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <div class="game text-center col-xs-12 col-sm-4 col-md-2" ng-repeat="game in category.games">
                            <img class="img-responsive full-width" src="{{game.thumbnail}}" cs-fallback-src="@Url.Content("~/Content/Images/casino-default.jpg")" alt="{{game.name}}" ng-click="onGameSelected(game.slug)" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
