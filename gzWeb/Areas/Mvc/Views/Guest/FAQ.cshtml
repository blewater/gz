@{
    Layout = "~/Areas/Mvc/Views/Shared/_GuestLayout.cshtml";
}

<div class="faq" ng-controller="faqCtrl">

    <div class="row">
        <h2 class="faq-heading">FAQ</h2>
    </div>

    <div class="row">
        <h3>About Greenzorro</h3>
        <div class="panel-group" id="accordion {{x.id}}" ng-repeat="x in aboutGreenzorro">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion {{x.id}}" href="#collapse{{x.id}}">
                            {{ x.Q }}
                            <img class="custom-caret" src="..\..\..\Content\Images\custom-caret-48px.svg" />
                        </a>
                    </h4>
                </div>
                <div id="collapse{{x.id}}" class="panel-collapse collapse">
                    <div class="panel-body" ng-bind-html="getHtml(x.A)"></div>
                </div>
            </div>
        </div>
        <h3>Games</h3>
        <div class="panel-group" ng-repeat="x in games">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#collapse{{x.id}}">
                            {{ x.Q }}
                            <img class="custom-caret" src="..\..\..\Content\Images\custom-caret-48px.svg" />
                        </a>
                    </h4>
                </div>
                <div id="collapse{{x.id}}" class="panel-collapse collapse">
                    <div class="panel-body" ng-bind-html="getHtml(x.A)"></div>
                </div>
            </div>
        </div>
        <h3>Investments</h3>
        <div class="panel-group" ng-repeat="x in investments">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#collapse{{x.id}}">
                            {{ x.Q }}
                            <img class="custom-caret" src="..\..\..\Content\Images\custom-caret-48px.svg" />
                        </a>
                    </h4>
                </div>
                <div id="collapse{{x.id}}" class="panel-collapse collapse">
                    <div class="panel-body" ng-bind-html="getHtml(x.A)"></div>
                </div>
            </div>
        </div>
    </div>

</div>