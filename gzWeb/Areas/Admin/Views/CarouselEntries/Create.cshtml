@model gzDAL.Models.CarouselEntry

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="admin admin-create dynamic-create">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 admin-interface">

                <div class="col-md-6">
                    <div class="row heading">
                        <h2 class="text-gz">Create</h2>
                        <h4>Dynamic Page</h4>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row heading text-right">
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>

                <div class="col-md-12 bg-gz">
                    <div class="row content">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="col-xs-8 col-xs-offset-2">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(model => model.SubTitle, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.SubTitle, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SubTitle, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(model => model.ActionUrl, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.ActionUrl, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ActionUrl, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(model => model.BackroudImageUrl, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.BackroudImageUrl, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.BackroudImageUrl, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(model => model.Live, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.Live, new { htmlAttributes = new { @class = "form-control", type = "checkbox", id = "live" } })
                                        @Html.ValidationMessageFor(model => model.Live, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(model => model.LiveFrom, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.LiveFrom, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                        @Html.ValidationMessageFor(model => model.LiveFrom, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.LabelFor(model => model.LiveTo, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.LiveTo, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                        @Html.ValidationMessageFor(model => model.LiveTo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-10 col-xs-offset-1">
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-offset-3 col-md-6">
                                            <input type="submit" value="Create" class="btn btn-default col-xs-12" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>