@model gzDAL.Models.EmailTemplate

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}








<div class="admin admin-edit email-edit">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 edit-interface">

                <div class="col-md-6 @*text-center*@">
                    <div class="row heading">
                        <h2 class="text-gz">Edit</h2>
                        <h4>EmailTemplate</h4>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row heading text-right">
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>

                <div class="col-md-12 bg-gz">
                    <div class="row content">
                        @using (Html.BeginForm())
                        {
                            @*<input type="hidden" name="jsonData" value="@ViewBag.JsonData"/>*@
                            
                            @Html.AntiForgeryToken()

                            <div class="col-xs-5 col-xs-offset-1">
                                <div class="row">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Id)
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label" })
                                            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label" })
                                            @*@Html.TextAreaFor(model => model.Body, new { rows = 20, htmlAttributes = new { @class = "form-control" } })*@
                                            @*@Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })*@
                                            <div id="body">
                                               @Html.DisplayFor(model => model.Body)
                                            </div>
                                        </div>
                                    </div>

                                    
                                </div>
                            </div>

                            <div class="col-xs-5">
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label" })
                                            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @*@using (Html.BeginForm("Edit", "EmailTemplates", FormMethod.Get))*@
                                        @*{*@
                                        <div class="col-md-12">
                                            @*<input type="hidden" name="id" value="@Model.Id" />*@
                                            <label for="data" class="control-label">Data</label>
                                            @*<textarea class="col-xs-10" id="data" rows=20 name="jsonData">@ViewBag.JsonData</textarea>*@
                                            <div id="data">
                                                @ViewBag.JsonData
                                            </div>
                                        </div>
                                        @*}*@
                                    </div>                                    
                                </div>
                            </div>

                            <div class="col-xs-10 col-xs-offset-1">
                                <div class="row">
                                        <div class="col-md-6">
                                            <input type="submit" value="Save" class="btn btn-default col-xs-12" />
                                        </div>
                                        <div class="col-md-6">
                                            <input type="submit" value="Preview" class="btn btn-default col-xs-12" />
                                        </div>
                                </div>
                            </div>

                            <div class="col-xs-10 col-xs-offset-1 view-holder">
                                <h3 class="text-center view-header">Template View</h3>
                                <div class="col-xs-12 template-preview">
                                    <div class="row">
                                        @Html.Raw(ViewBag.EmailTemplate)
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.3/ace.js"></script>
<script>
    var data = ace.edit("data");
    data.setTheme("ace/theme/solarized_light");
    data.getSession().setMode("ace/mode/json");
    var code = data.getValue();

    var body = ace.edit("body");
    body.setTheme("ace/theme/solarized_light");
    body.getSession().setMode("ace/mode/html");

    //var editor1 = ace.edit("e1");
