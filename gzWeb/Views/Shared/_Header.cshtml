@model gzWeb.ViewModels.UserInfoViewModel

<header>
    <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="centered hidden">
                <span class="visible-lg">LG</span>
                <span class="visible-md">MD</span>
                <span class="visible-sm">SM</span>
                <span class="visible-xs">XS</span>
            </div>
            <div>
                <div class="navbar-header">
                    <a id="logo" class="navbar-brand" href="/">
                        <img class="pull-left" src="@Url.Content("~/Content/images/logo.svg")" alt="Logo" />
                        <h2 class="pull-left">GREENZORRO</h2>
                    </a>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#header-collapse-section">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar icon-top-bar"></span>
                        <span class="icon-bar icon-middle-bar"></span>
                        <span class="icon-bar icon-bottom-bar"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse " id="header-collapse-section">
                    <span class="user-info pull-left">
                        <span class="user-avatar">
                            @if (String.IsNullOrEmpty(Model.Img))
                            {
                                <span class="user-initials img-circle">@Model.Initials</span>
                            }
                            else
                            {
                                <img class="user-img img-circle" src="@Model.Img" alt="User Image" />
                            }
                        </span>
                        <span class="user-name">@Model.Name</span>
                    </span>
                    <div class="nav-btns pull-right">
                        <a class="nav-btn-login">
                            <img src="@Url.Content("~/Content/Images/login.png")" />
                            <p>LOGIN</p>
                        </a>
                        <a class="nav-btn-casino">
                            <img src="@Url.Content("~/Content/Images/diagram.svg")" />
                            <p>TO INVESTMENTS</p>
                        </a>
                        <a class="nav-btn-investments">
                            <img src="@Url.Content("~/Content/Images/games.svg")" />
                            <p>BACK TO GAMES</p>
                        </a>
                    </div>
                    <div class="links">
                        <nav class="cl-effect">
                            <ul class="links-guest">
                                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                                <li><a href="@Url.Action("Transparency", "Home")">Transparency</a></li>
                                <li><a href="@Url.Action("About", "Home")">About</a></li>
                            </ul>
                            <ul class="links-casino">
                                <li><a href="@Url.Action("Index", "Casino")">Casino</a></li>
                                <li><a href="@Url.Action("Page1", "Casino")">Casino 1</a></li>
                                <li><a href="@Url.Action("Page2", "Casino")">Casino 2</a></li>
                                <li><a href="@Url.Action("Page3", "Casino")">Casino 3</a></li>
                            </ul>
                            <ul class="links-investments">
                                <li><a href="@Url.Action("Index", "Investments")">SUMMARY</a></li>
                                <li><a href="@Url.Action("Portfolio", "Investments")">PORTFOLIO</a></li>
                                <li><a href="@Url.Action("Performance", "Investments")">PERFORMANCE</a></li>
                                <li><a href="@Url.Action("Activity", "Investments")">ACTIVITY</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>


