@using System.Reflection
@using gzWeb.Providers
@{
    var assembly = Assembly.GetAssembly(typeof(ApplicationOAuthProvider));
    var assemblyName = assembly.GetName().Name;
    var gitVersionInformationType = assembly.GetType(assemblyName + ".GitVersionInformation");
    var versionField = gitVersionInformationType.GetField("InformationalVersion");
}

<footer class="bg-gz" ng-controller="footerCtrl" ng-hide="playing">
    <div class="container">
        <div class="footer-menu cl-effect text-center">
            <a ng-repeat-start="route in routes" ng-href="{{route.path}}" ng-class="getClass(route.path)">{{route.title}}</a>
            <span ng-repeat-end ng-class="{'clearfix': xs && $index % 4 === 3}"></span>
        </div>
        <div class="footer-social text-center">
            <a href="https://www.facebook.com/greenzorro-520872994721625/timeline/" target="_blank"><i class="fa fa-facebook" ng-class="{'fa-lg': !xs}"></i></a>
            <a href="https://twitter.com/GrZorro" target="_blank"><i class="fa fa-twitter" ng-class="{'fa-lg': !xs}"></i></a>
            <a href="https://www.linkedin.com/company/greenzorro?trk=top_nav_home" target="_blank"><i class="fa fa-linkedin" ng-class="{'fa-lg': !xs}"></i></a>
            <a href="https://www.instagram.com/greenzorro_official/" target="_blank"><i class="fa fa-instagram" ng-class="{'fa-lg': !xs}"></i></a>
            <a href="mailto:help@greenzorro.com" target="_blank"><i class="fa fa-envelope" ng-class="{'fa-lg': !xs}"></i></a>
            <a href="http://maps.google.com/?q=80 Long Ln, London EC1A 9ET, UK" target="_blank"><i class="fa fa-map-marker" ng-class="{'fa-lg': !xs}"></i></a>
        </div>

        <div class="footer-license text-center">
            <a class="mga" href="https://www.authorisation.mga.org.mt/verification.aspx?lang=en&company=6d9bcc8f-2ec5-49d3-90c6-58f0dde5d820" target="_blank">
                <img class="img-thumbnail" src="../../Content/Images/mga.png" alt="EveryMatrix Limited - Licensed">
            </a>
            <a class="play-responsibly" ng-click="!isGamer || gotoResponsibleGaming()">
                <img class="img-thumbnail" src="../../Content/Images/18plus.png" alt="18+ Play Responsibly">
            </a>
        </div>
        <div class="footer-advice text-center">
            <span class="text-frame text-frame-sm">
                Gambling can be addictive, please play responsibly.
            </span>
        </div>

        <div class="footer-payment-methods text-center">
            <div class="footer-payment-method footer-visa">
                <img class="img-thumbnail img-responsive" src="../../Content/Images/payment methods/visa.svg" alt="Visa">
            </div>
            <div class="footer-payment-method footer-mastercard">
                <img class="img-thumbnail img-responsive" src="../../Content/Images/payment methods/mastercard.svg" alt="Master Card">
            </div>
            <div class="footer-payment-method footer-maestro">
                <img class="img-thumbnail img-responsive" src="../../Content/Images/payment methods/maestro.svg" alt="Maestro">
            </div>
            <div class="footer-payment-method footer-trustly">
                <img class="img-thumbnail img-responsive" src="../../Content/Images/payment methods/trustly.svg" alt="Trustly">
            </div>
        </div>

        <div class="license-disclaimer text-center">
            <div class="row">
                <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8">
                    The website is operated and managed by EveryMatrix Ltd, a company bearing registration number C44411, and having its registered address at Suite 10, Level 4, Portomaso Business Tower, Vjal Portomaso, St.Julians, STJ 4011, Malta. EveryMatrix Ltd. is licensed and regulated by the Malta Gaming Authority (www.mga.org.mt) in virtue of a Class 1 license numbered MGA/CL1/497/2010.
                </div>
            </div>
        </div>
        <hr class="copyright-hr" />
        <div class="copyright text-center">
            &copy; {{copyrightYears}} | greenzorro ltd | All rights reserved
        </div>
        <div class="company-registration text-center">
            <span>Company registration number: 9320285</span>
            <span class="company-registration-separator"> | </span>
            <span>Registered in England & Wales</span>
        </div>
        <div ng-show="inDebugMode" class="debug-info text-center clearfix">
            <br />
            <span>@versionField.GetValue(null)</span>
        </div>
    </div>
</footer>



