FROM fsharp

# Install utilities
RUN apt-get update -y && \
    apt-get upgrade -y && \
    apt-get dist-upgrade -y && \
    apt-get -y autoremove && \
    apt-get clean
RUN apt-get install -y \
    unzip \
    wget

#============================================
